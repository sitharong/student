<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Unified app log for your controllers, services, etc. -->
    <appender name="APP_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/app.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] - %level - %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console log for everything -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] - %level - %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log only your application package (adjust the package name below) -->
    <logger name="com.acleda.student" level="INFO" additivity="false">
        <appender-ref ref="APP_FILE"/>
    </logger>

    <!-- Root logger: only to console -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>